@page
@model BookListRazor.Pages.BookList.ShopModel
@{
    ViewData["Title"] = "Shop";
}

<h1>Shop</h1>

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
   <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Isbn"></label>
                        </th>

                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Author)</td>
                    <td>@Html.DisplayFor(m => item.Isbn)</td>
                    <td>

                        <a asp-page="Cart" asp-page-handler="AddToCart" onclick="buttonClick" class="btn btn-primary btn-sm " asp-route-id="@item.Id">Add to cart</a>

                    </td>
                    <td>

                        <a asp-page="Review"  class="btn btn-primary btn-sm " asp-route-id="@item.Id">Review Book</a>

                    </td>
                </tr>

                    }
                </table>
            }
            else
            {
                <p> No books available</p>
            }
        </form>
    </div>



</div>

